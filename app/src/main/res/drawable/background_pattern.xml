<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Gradient Layer -->
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#FFDEE9"
                android:endColor="#B5FFFC"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <!-- Pattern Overlay -->
        <shape>
            <path
                android:fillColor="#1AFFFFFF"
            android:pathData="M 0,0 L 50,0 50,50 0,50 Z M 25,25 A 10,10 0 1,1 25,25.1 Z" />
        </shape>
    </item>
</layer-list>
